{
	"extends": "@codespartan/typescript-config",
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"allowDefaultProject": true,
		"moduleResolution": "node"
	},
	"include": [
		"packages/**/*.ts",
		"packages/**/*.mjs",
		"packages/**/*.js",
		"*.js",
		"*.mjs",
		"*.json",
		"settings/release.mjs",
		"packages/commitlint-config/commitlint.config.js",
		"packages/eslint-config/eslint.config.mjs",
		"packages/prettier-config/.prettierrc.js"
	],

	"exclude": ["node_modules", "dist", "build", "**/*.config.js", "**/*.config.mjs", "**/rollup.config.mjs", "**/*.d.ts"]
}
