{
	"name": "@codespartan/settings-config",
	"version": "0.1.0",
	"private": true,
	"description": "Librería que contiene las configuraciones básicas para proyectos de Typescript",
	"keywords": [],
	"license": "ISC",
	"author": {
		"name": "Jorge Carballo",
		"email": "jcarballo@bankinter.com"
	},
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/core.es.js",
			"require": "./dist/core.cjs.js",
			"types": "./dist/types/core.d.ts"
		}
	},
	"main": "dist/core.cjs.js",
	"module": "dist/core.es.js",
	"types": "dist/types/core.d.ts",
	"files": [
		"dist",
		"package.json",
		"release.mjs",
		"eslint.config.mjs",
		"commitlint.config.mjs",
		".prettierrc.json",
		".lintstagedrc.mjs",
		"packages/standard-version-config/.versionrc.js",
		".czrc",
		"CHANGELOG.md",
		"README.md"
	],
	"scripts": {
		"build": "pnpm -r run build",
		"buildAndChangelog": "pnpm run build && pnpm run changelog",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
		"check": "pnpm prettier-config check",
		"check:fix": "pnpm prettier-config write",
		"clean": "rimraf ./dist",
		"commit": "cz",
		"dev": "pnpm -r run dev",
		"lint": "pnpm eslint-config lint",
		"lint:fix": "pnpm eslint-config lint:fix",
		"release": "standard-version",
		"release:major": "standard-version --release-as major",
		"release:minor": "standard-version --release-as minor",
		"release:patch": "standard-version --release-as patch"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"@commitlint/prompt-cli": "^19.5.0",
		"@eslint/js": "9.10.0",
		"@stylistic/eslint-plugin": "^2.8.0",
		"@typescript-eslint/eslint-plugin": "^8.5.0",
		"@typescript-eslint/parser": "^8.5.0",
		"commitizen": "^4.3.0",
		"conventional-changelog-cli": "^5.0.0",
		"eslint": "^9.10.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-jest": "^28.8.3",
		"eslint-plugin-prettier": "^5.2.1",
		"husky": "^9.1.5",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"standard-version": "^9.5.0",
		"typescript": "^5.6.2",
		"vite": "^5.4.4",
		"vite-plugin-string": "^1.2.3"
	},
	"workspaces": [
		"packages/*"
	],
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0",
		"yarn": ">=1.2.0"
	}
}
