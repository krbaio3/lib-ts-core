{
	"name": "@codespartan/lib-ts-core",
	"version": "0.1.0",
	"description": "Librería que contiene las configuraciones básicas para proyectos de Typescript",
	"type": "module",
	"keywords": [
		"typescript",
		"core"
	],
	"author": {
		"name": "John Krbaio",
		"email": "krbaio3@gmail.com"
	},
	"scripts": {
		"build": "tsc && vite build && rollup -c rollup.config.mjs",
		"buildAndChangelog": "npm run build && npm run changelog",
		"changelog": "npx conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
	},
	"devDependencies": {
		"@codespartan/eslint-config": "workspace:*",
		"@codespatan/prettier-config": "workspace:*",
		"@codespartan/standard-version-config": "workspace:*",
		"@codespatan/commitlint-config": "workspace:*",
		"@codespartan/typescript-config": "workspace:*",
		"typescript": "^5.6.2",
		"vite": "^5.4.4",
		"vite-plugin-string": "^1.2.3"
	},
	"licenses": [
		{
			"type": "MIT",
			"url": "https://opensource.org/licenses/MIT"
		}
	],
	"exports": {
		".": {
			"import": "./dist/core.es.js",
			"require": "./dist/core.cjs.js",
			"types": "./dist/types/core.d.ts"
		}
	},
	"main": "dist/core.cjs.js",
	"module": "dist/core.es.js",
	"types": "dist/types/core.d.ts",
	"files": [
		"dist",
		"package.json",
		"CHANGELOG.md",
		"README.md"
	]
}
